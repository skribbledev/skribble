{
  "name": "skribble-monorepo",
  "description": "Design with pragmatic irreverence.",
  "repository": "https://github.com/skribbledev/skribble",
  "license": "MIT",
  "contributors": [
    {
      "name": "Ifiok Jr.",
      "email": "ifiokotung@gmail.com",
      "url": "https://skribble.dev"
    }
  ],
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install && run-s dev:napi dev:wasm",
    "build": "run-p build:packages typecheck",
    "build:napi": "pnpm run:napi --release",
    "build:packages": "monots build",
    "build:storybook": "build-storybook -c .monots/storybook",
    "build:wasm": "run-s build:wasm:clean build:wasm:esm build:wasm:node build:wasm:copy",
    "build:wasm:clean": "rimraf packages/skribble-css/packages/wasm/dist crates/skribble_css_wasm/pkg",
    "build:wasm:copy": "cpy crates/skribble_css_wasm/pkg/esm/*.{wasm,d.ts,js} packages/skribble-css/packages/wasm/dist/esm && cpy crates/skribble_css_wasm/pkg/node/*.{wasm,d.ts,js} packages/skribble-css/packages/wasm/dist/node && rm -rf crates/skribble_css_wasm/pkg",
    "build:wasm:esm": "wasm-pack build --target bundler --out-name index --out-dir pkg/esm --release crates/skribble_css_wasm",
    "build:wasm:node": "wasm-pack build --target nodejs --out-name index --out-dir pkg/node --release crates/skribble_css_wasm",
    "check:pnpm": "node .monots/check-pnpm.js",
    "checks": "run-s lint typecheck test",
    "clean": "git clean -fdX --exclude='.config.json'",
    "dev:demos": "vite",
    "dev:monots": "monots prepare",
    "dev:napi": "run-s fix:config run:napi napi-types:generate napi-types:prettify napi:artifacts napi-types:remove",
    "dev:wasm": "run-s build:wasm:clean dev:wasm:esm dev:wasm:node build:wasm:copy",
    "dev:wasm:esm": "wasm-pack build --target bundler --out-name index --out-dir pkg/esm --dev crates/skribble_css_wasm",
    "dev:wasm:node": "wasm-pack build --target nodejs --out-name index --out-dir pkg/node --dev crates/skribble_css_wasm",
    "fix": "run-s -c fix:\\*",
    "fix:build": "monots fix",
    "fix:config": "pnpm ts .monots/scripts/default-config.ts",
    "fix:es": "pnpm lint:es --fix",
    "fix:prettier": "pnpm run:prettier --write",
    "fix:repo": "manypkg fix",
    "preinstall": "pnpm symlink:root && pnpm check:pnpm",
    "postinstall": "run-s dev:monots fix:config",
    "lint": "run-s lint:*",
    "lint:build": "monots check",
    "lint:es": "eslint --ext=.tsx,.ts,.js .",
    "lint:prettier": "pnpm run:prettier --check",
    "lint:repo": "manypkg check",
    "monots": "monots",
    "napi-types:generate": "pnpm ts .monots/scripts/generate-napi-types.ts",
    "napi-types:prettify": "prettier --ignore-path .eslintignore ./packages/skribble-css/src/bindings.ts --write",
    "napi-types:remove": "rimraf ./packages/skribble-css/tmp.d.ts",
    "napi:artifacts": "make-dir artifacts && pnpm ts .monots/scripts/move-artifacts.ts",
    "prepare": "husky install .monots/.husky",
    "prerelease": "pnpm build",
    "reset": "pnpm clean; rm pnpm-lock.yaml; pnpm symlink:root; pnpm i -r;",
    "run:napi": "napi build --platform --cargo-cwd='./crates/skribble_css_node' --config='./packages/skribble-css/package.json' --js=false --dts='./packages/skribble-css/tmp.d.ts'",
    "run:prettier": "prettier --ignore-path .eslintignore \"**/*.{js,jsx,ts,tsx,md,mdx,json,html,css,yml,yaml,graphql}\"",
    "serve:demos": "vite preview",
    "snapshot:crates": "cargo insta review",
    "storybook": "start-storybook -h localhost -p 6006 -c .monots/storybook",
    "symlink:root": "node .monots/symlink-root.js",
    "test": "vitest run",
    "test:coverage": "vitest coverage",
    "test:crates": "cargo test --package skribble_css --lib --exact --nocapture",
    "test:crates:watch": "chokidar \"crates/skribble_css\" -c \"cargo test --package skribble_css\" --ignore \"**/*.{snap.new,pending-snap}\" --initial",
    "test:watch": "vitest",
    "ts": "node --experimental-specifier-resolution=node --loader ts-node/esm",
    "typecheck": "tsc -b",
    "update:deps": "pnpm update --latest --recursive -i",
    "update:workspace": "pnpm up -r --workspace \"packages/*\""
  },
  "dependencies": {
    "@auto-it/all-contributors": "^10.32.6",
    "@auto-it/crates": "^10.32.6",
    "@auto-it/magic-zero": "^10.32.6",
    "@auto-it/npm": "^10.32.6",
    "@manypkg/cli": "^0.19.1",
    "@monots/cli": "^0.12.0",
    "@monots/tsconfig": "^0.1.0",
    "@napi-rs/cli": "^2.4.4",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@vitejs/plugin-react": "^1.2.0",
    "auto": "^10.32.6",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.10.0",
    "eslint-config-monots": "^0.8.0",
    "happy-dom": "^2.41.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "make-dir-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-config-monots": "^0.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "serve": "^13.0.2",
    "storybook-builder-vite": "^0.1.17",
    "ts-node": "^10.5.0",
    "typescript": "4.6.2",
    "vite": "^2.8.5",
    "vitest": "^0.5.8",
    "wasm-pack": "^0.10.2"
  },
  "engines": {
    "node": ">=16.9",
    "pnpm": ">=6"
  },
  "monots": {
    "packages": [
      "packages/*",
      "websites/*"
    ],
    "baseTsconfig": "./.monots/tsconfig.base.json",
    "tsconfig": {
      "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
          "esModuleInterop": true,
          "target": "ESNext"
        }
      }
    }
  },
  "packageManager": "pnpm@7.0.0-alpha.3"
}
