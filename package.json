{
  "name": "skribble-monorepo",
  "description": "Design with pragmatic irreverence.",
  "repository": "https://github.com/skribbledev/skribble",
  "license": "MIT",
  "contributors": [
    {
      "name": "Ifiok Jr.",
      "email": "ifiokotung@gmail.com",
      "url": "https://skribble.dev"
    }
  ],
  "type": "module",
  "scripts": {
    "benchmark": "node .monots/scripts/benchmark.js",
    "bootstrap": "corepack enable && pnpm i && run-p setup:rust dev:napi dev:wasm",
    "build": "run-p -cln build:packages check:types build:napi build:wasm",
    "build:components": "pnpm --dir .monots/ladle build",
    "build:docs": "pnpm --dir ./docs build",
    "build:napi": "pnpm run:napi --release",
    "build:packages": "monots build",
    "build:wasm": "run-s build:wasm:clean build:wasm:esm build:wasm:node build:wasm:copy",
    "build:wasm:clean": "rimraf packages/skribble-css/packages/wasm/dist crates/skribble_css_wasm/pkg",
    "build:wasm:copy": "cpy crates/skribble_css_wasm/pkg/esm/*.{wasm,d.ts,js} packages/skribble-css/packages/wasm/dist/esm && cpy crates/skribble_css_wasm/pkg/node/*.{wasm,d.ts,js} packages/skribble-css/packages/wasm/dist/node && rm -rf crates/skribble_css_wasm/pkg",
    "build:wasm:esm": "wasm-pack build --target bundler --out-name index --out-dir pkg/esm --release crates/skribble_css_wasm",
    "build:wasm:node": "wasm-pack build --target nodejs --out-name index --out-dir pkg/node --release crates/skribble_css_wasm",
    "check:cargo": "cargo check",
    "check:pnpm": "node .monots/check-pnpm.js",
    "check:types": "tsc -b",
    "checks": "run-s lint check:* test",
    "clean": "git clean -xfd -e rust-toolchain.toml -e rustfmt.toml -e .vscode",
    "dev:components": "pnpm --dir .monots/ladle dev",
    "dev:docs": "pnpm --dir ./docs dev",
    "dev:monots": "monots prepare",
    "dev:napi": "run-s fix:config run:napi napi-types:generate napi-types:prettify napi:artifacts napi-types:remove",
    "dev:wasm": "run-s build:wasm:clean dev:wasm:esm dev:wasm:node build:wasm:copy",
    "dev:wasm:esm": "wasm-pack build --target bundler --out-name index --out-dir pkg/esm --dev crates/skribble_css_wasm",
    "dev:wasm:node": "wasm-pack build --target nodejs --out-name index --out-dir pkg/node --dev crates/skribble_css_wasm",
    "fix": "run-s -c fix:\\*",
    "fix:audit": "pnpm audit --fix",
    "fix:build": "monots fix",
    "fix:clippy": "cargo clippy --fix --allow-dirty --allow-staged",
    "fix:config": "pnpm ts .monots/scripts/default-config.ts",
    "fix:es": "pnpm lint:es --fix",
    "fix:prettier": "pnpm run:prettier --write",
    "fix:repo": "manypkg fix",
    "fix:rust-fmt": "cargo fmt",
    "preinstall": "pnpm symlink:root && pnpm check:pnpm",
    "postinstall": "run-s dev:monots fix:config",
    "lint": "run-s lint:*",
    "lint:audit": "pnpm audit",
    "lint:build": "monots check",
    "lint:clippy": "cargo clippy",
    "lint:es": "eslint --ext=.tsx,.ts,.js .",
    "lint:prettier": "pnpm run:prettier --check",
    "lint:repo": "manypkg check",
    "lint:rust-fmt": "cargo fmt --check",
    "monots": "monots",
    "napi-types:generate": "pnpm ts .monots/scripts/generate-napi-types.ts",
    "napi-types:prettify": "prettier --ignore-path .eslintignore ./packages/skribble-css/src/bindings.ts --write",
    "napi-types:remove": "rimraf ./packages/skribble-css/tmp.d.ts",
    "napi:artifacts": "pnpm ts .monots/scripts/move-artifacts.ts",
    "prepare": "husky install .monots/.husky",
    "prerelease": "pnpm build",
    "reset": "pnpm clean; rm pnpm-lock.yaml; pnpm bootstrap;",
    "run:napi": "napi build --platform --cargo-cwd='./crates/skribble_css_node' --config='./packages/skribble-css/package.json' --js=false --dts='./packages/skribble-css/tmp.d.ts' && make-dir artifacts && mv -f ./skribble_css.*.node artifacts",
    "run:prettier": "prettier --ignore-path .eslintignore \"**/*.{js,jsx,ts,tsx,md,mdx,json,html,css,yml,yaml,graphql}\"",
    "serve:demos": "vite preview",
    "setup:rust": "cargo insta -h || cargo install cargo-insta; cargo upgrade -h || cargo install cargo-edit",
    "snapshot": "run-p snapshot:*",
    "snapshot:crates": "cargo insta review",
    "snapshot:packages": "vitest run -u",
    "symlink:root": "node .monots/symlink-root.js",
    "test": "run-p test:packages test:crates",
    "test:crates": "cargo test --exact --nocapture",
    "test:packages": "vitest run",
    "test:watch": "run-p test:crates:watch test:packages:watch",
    "test:watch:crates": "chokidar \"crates\" -c \"cargo test\" --ignore \"**/*.{snap.new,pending-snap}\" --initial",
    "test:watch:packages": "chokidar \"packages/skribble-css/packages/**/*.node\" -c vitest --initial",
    "ts": "node --experimental-specifier-resolution=node --loader ts-node/esm",
    "upgrade": "run-p upgrade:\\*",
    "upgrade:crates": "cargo upgrade --workspace",
    "upgrade:packages": "pnpm update --latest --recursive -i"
  },
  "dependencies": {
    "@auto-it/all-contributors": "^10.36.5",
    "@auto-it/crates": "^10.36.5",
    "@auto-it/magic-zero": "^10.36.5",
    "@auto-it/npm": "^10.36.5",
    "@manypkg/cli": "^0.19.1",
    "@monots/cli": "^0.12.4",
    "@monots/tsconfig": "^0.1.0",
    "@napi-rs/cli": "^2.7.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@types/node": "^17.0.30",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@vitejs/plugin-react": "^1.3.1",
    "auto": "^10.36.5",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^4.1.0",
    "eslint": "^8.14.0",
    "eslint-config-monots": "^0.11.0",
    "happy-dom": "^3.1.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "make-dir-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-config-monots": "^0.2.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "serve": "^13.0.2",
    "ts-node": "^10.7.0",
    "typescript": "4.6.4",
    "vite": "^2.9.6",
    "vitest": "^0.10.0",
    "wasm-pack": "^0.10.2"
  },
  "packageManager": "pnpm@7.0.0-rc.9",
  "engines": {
    "node": ">=16.9",
    "pnpm": ">=6"
  },
  "monots": {
    "packages": [
      "packages/*",
      "websites/*"
    ],
    "baseTsconfig": "./.monots/tsconfig.base.json",
    "tsconfig": {
      "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
          "esModuleInterop": true,
          "target": "ESNext"
        }
      }
    },
    "packageTsconfigs": {
      "stories": {}
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "wasm-pack"
    ],
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2"
    }
  }
}
